<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
          width="100%"
          displayBlock="true"
          controllerName="ns.Procedures_Details_Open_Text.Card">

    <List items="{oProceduresModel>/}" includeItemInSelection="true" busyIndicatorDelay="0" growing="true" growingThreshold="20" growingScrollToLoad="true">
        <CustomListItem>
            <HBox>
                <core:Icon 
                    size="2rem" 
                    src="{path: 'oProceduresModel>mime', formatter: '.Formatter.doctypeicon' }" 
                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
				    <Link text="{oProceduresModel>name}" href="{oProceduresModel>url}" target="_blank" class="requirementText"/>
                    <Label text="{path: 'oProceduresModel>description',formatter: '.Formatter.previewText'}"/>
                    <Text text="{path: 'oProceduresModel>expirydate', formatter: '.Formatter.formatExpiryDate'}" class="sapUiTinyMarginTop textColor"/>
                </VBox>
            </HBox>
        </CustomListItem>
    </List>
</mvc:View>
